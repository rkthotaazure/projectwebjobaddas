                        <span id="procentcompleted"></span>
                    </div>
                    @*<div class="completeDiv" ng-click="completedCount()">{{completed}}</div>*@                    

                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 text-align-center" ng-class="{pendingselect:pendingselected}">
                    <span style="font-size:16px">Pending</span>
                </div>
                <div class="col-xs-6 text-align-center" ng-class="{completedselect:completedselected}">
